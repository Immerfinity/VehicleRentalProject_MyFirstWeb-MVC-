@using VehicleRentalProject.Models.ViewModels.Vehicle
@model CreateVehicleViewModel
@{
    ViewData["Title"] = "Добавление машины";
}

<div class="container">
    <h2>Добавить новую машину</h2>
    <hr />

    <form asp-action="Create" asp-controller="Vehicles" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="VehicleName">Название машины:</label>
                    <input type="text" class="form-control" id="VehicleName" name="VehicleName" required />
                </div>

                <div class="form-group">
                    <label for="VehicleType">Тип машины:</label>
                    <select name="VehicleType" class="form-control" id="VehicleType" required>
                        <option value="">Выберите тип</option>
                        <option value="Седан">Седан</option>
                        <option value="Седан">Купе</option>
                        <option value="Седан">Универсал</option>
                        <option value="Хэтчбек">Хэтчбек</option>
                        <option value="Седан">Внедорожник</option>
                        <option value="Кроссовер">Кроссовер</option>
                        <option value="Седан">Пикап</option>
                        <option value="Минивэн">Минивэн</option>
                    </select>
                </div>


                <div class="form-group">
                    <label for="VehicleModel">Модель машины:</label>
                    <input type="text" class="form-control" id="VehicleModel" name="VehicleModel" required />
                </div>
            </div>


            <div class="col-md-4">
                <div class="form-group">
                    <label for="VehicleNumber">Номер машины:</label>
                    <input type="text" class="form-control" id="VehicleNumber" name="VehicleNumber" required/>
                    <small class="form-text text-muted">Формат номера: АА1234BB1 или A1234BB12</small>
                </div>

                <div class="form-group">
                    <label for="VehicleColor">Цвет машины:</label>
                    <input type="text" class="form-control" id="VehicleColor" name="VehicleColor" required />
                </div>

                <div class="form-group">
                    <label for="VehicleDescription">Дополнительная информация:</label>
                    <textarea class="form-control" id="VehicleDescription" name="VehicleDescription" rows="3" required></textarea>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="VehicleImage">Изображение машины:</label>
                    <input type="file" class="form-control-file" id="VehicleImageUrl" name="VehicleImageUrl" required />
                </div>

                <div class="form-group">
                    <label for="VehiclePrice">Цена машины:</label>
                    <input type="number" class="form-control" id="VehiclePrice" name="VehiclePrice" required />
                </div>

                <div class="form-group">
                    <label for="DailyRate">Дневная Ставка:</label>
                    <input type="number" class="form-control" id="DailyRate" name="DailyRate" required />
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="IsAvailable" name="IsAvailable" />
                    <label class="form-check-label" for="IsAvailable">Доступность</label>
                </div>
            </div>
        </div>

        <br />

        <div class="text-center">

            <button type="submit" class="btn btn-primary">Добавить</button>
            <a asp-action="Index" asp-controller="Vehicles" class="btn btn-secondary">Вернуться</a>
        </div>
    </form>
</div>
