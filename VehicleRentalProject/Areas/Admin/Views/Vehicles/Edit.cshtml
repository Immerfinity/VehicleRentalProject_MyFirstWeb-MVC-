@using VehicleRentalProject.Web.Models.ViewModels.Vehicle;
@model EditVehicleViewModel
@{
    ViewData["Title"] = "Редактирование машины";
}

<div class="container">
    <h2>Добавить новую машину</h2>
    <hr />

    <form asp-action="Edit" asp-controller="Vehicles" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" name="Id" />
                    <label for="VehicleName">Название машины:</label>
                    <input type="text" class="form-control" asp-for="VehicleName" required />
                </div>

                <div class="form-group">
                    <label for="VehicleType">Тип машины:</label>
                    <select name="VehicleType" class="form-control" id="VehicleType" required>
                        <option value="">Выберите тип</option>
                        <option value="Седан">Седан</option>
                        <option value="Седан">Купе</option>
                        <option value="Седан">Универсал</option>
                        <option value="Хэтчбек">Хэтчбек</option>
                        <option value="Седан">Внедорожник</option>
                        <option value="Кроссовер">Кроссовер</option>
                        <option value="Седан">Пикап</option>
                        <option value="Минивэн">Минивэн</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="VehicleModel">Модель машины:</label>
                    <input type="text" class="form-control" asp-for="VehicleModel" required />
                </div>
            </div>


            <div class="col-md-4">
                <div class="form-group">
                    <label for="VehicleNumber">Номер машины:</label>
                    <input type="text" class="form-control" id="VehicleNumber" name="VehicleNumber" required pattern="^[АВЕКМНОРСТХ]{1,2}\d{3,4}[АВЕКМНОРСТХ]{2}\d{1,2}$" title="Введите корректный номер машины" />
                    <small class="form-text text-muted">Формат номера: АА1234BB1 или A1234BB12</small>
                </div>

                <div class="form-group">
                    <label for="VehicleColor">Цвет машины:</label>
                    <input type="text" class="form-control" asp-for="VehicleColor" required />
                </div>

                <div class="form-group">
                    <label for="VehicleDescription">Дополнительная информация:</label>
                    <textarea class="form-control" asp-for="VehicleDescription" rows="3" required></textarea>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="VehicleImage">Изображение машины:</label>
                    <input type="file" class="form-control-file" id="VehicleImageUrl" name="VehicleImageUrl" />
                </div>

                <div class="form-group">
                    <label for="VehiclePrice">Цена машины:</label>
                    <input type="number" class="form-control" asp-for="VehiclePrice" required />
                </div>

                <div class="form-group">
                    <label for="DailyRate">Дневная Ставка:</label>
                    <input class="form-control" asp-for="DailyRate" required />
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="IsAvailable" />
                    <label class="form-check-label" for="IsAvailable">Доступность</label>
                </div>
            </div>
        </div>

        <br />

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Редактировать</button>
            <a asp-action="Index" asp-controller="Vehicles" class="btn btn-secondary">Вернуться</a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function validateVehicleNumber() {
            const vehicleNumber = document.getElementById('VehicleNumber').value;
            const pattern = /^[АВЕКМНОРСТХ]{1,2}\d{3,4}[АВЕКМНОРСТХ]{2}\d{1,2}$/;
            if (!pattern.test(vehicleNumber)) {
                alert('Введите корректный номер машины.');
                return false;
            }
            return true;
        }
    </script>
}